-
  const sec2Data = [
    {
      icon: 'services',
      title: translate.sec2.development.title,
      list: [
        translate.sec2.development.creatingPlatform,
        translate.sec2.development.microservices,
        translate.sec2.development.prototypes
      ]
    },
    {
      icon: 'communication',
      title: translate.sec2.automation.title,
      list: [
        translate.sec2.automation.bpmn,
        translate.sec2.automation.integration,
        translate.sec2.automation.decomposition
      ]
    },
    {
      icon: 'lightweight',
      title: translate.sec2.outsourcing.title,
      list: [
        translate.sec2.outsourcing.tAndM,
        translate.sec2.outsourcing.team,
        translate.sec2.outsourcing.turnKey
      ]
    }
  ]

+section.sec2(id=menu[0].href)
  +container.sec2__container
    h3.sec2__title
      !=translate.sec2.title

    +slider('sec2')
      each item in sec2Data
        +sliderSlide('sec2')
          .sec2__slider-slide-inner
            .sec2__slider-content
              .sec2__slider-content-inner
                +icon(`icon_${item.icon}`).sec2__slider-content-img
                //- img(src=`./img/${item.icon}.svg`, alt='').sec2__slider-content-img
                p.sec2__slider-title
                  != item.title
            .sec2__slider-description
              if item.text
                p
                  != item.text
              if item.list
                +simple-list(item.list).sec2__slider-list